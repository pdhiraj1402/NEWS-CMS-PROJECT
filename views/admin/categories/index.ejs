<script>

    const tableData = <%- JSON.stringify(categories) %>;
    const table = new Tabulator('#categoriesTable', {
      data : tableData,
      layout:"fitColumns", 
      pagination:true,
      paginationSize:10,
      paginationSizeSelector:[5,10,25,50,100],
      columns:[
        {title:"Sr. No", formatter:"rownum", width:100, hozAlign:"center"},
        {title:"Category Name", field:"name", headerFilter:"input"},
        {title:"Slug", field:"slug", headerFilter:"input"},
        {
          title:"Actions", 
          formatter: function (cell, formatterParams, onRendered) {
            return `<a href="/admin/update-category/${cell.getData()._id}" class="btn btn-sm btn-success"> Edit </a>
                    <button class="btn btn-sm btn-danger delete-category" onclick = "deleteCategory('${cell.getData()._id}')">Delete</button>
            `;
          }
        },
      ]
    });

    async function deleteCategory(id){
      try{
        if(confirm("Are you sure you want to delete this category?")){
          const response = await fetch(`/admin/delete-category/${id}`, {
            method: 'DELETE'
          });
          if(response.ok){
            location.reload();
          }
        }      
      }catch(err){
        console.log(err);
      }
    }

</script>

